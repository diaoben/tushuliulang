<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
       tools:context="com.zjut.tushuliulang.tushuliulang.activities.add_book_share"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="286dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:id="@+id/add_book_share_pic"
                android:layout_gravity="center"
                android:src="#4e55ff" />

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:text="书名："
                android:id="@+id/textView5"
                android:gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_book_share_book_name"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:text="ISBN:"
                android:id="@+id/textView6"
                android:gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_book_share_isbn"
                android:layout_weight="0.95"
                android:background="@android:drawable/picture_frame" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05">

            <TextView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:text="介绍："
                android:id="@+id/textView7"
                android:gravity="top|center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="122dp"
                android:id="@+id/add_book_share_intro"
                android:layout_weight="1"
                android:background="@android:drawable/picture_frame"
                android:gravity="top" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:text="手机："
                android:id="@+id/textVie"
                android:gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_book_share_phone"
                android:layout_weight="0.95"
                android:background="@android:drawable/picture_frame"
                android:phoneNumber="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:text="QQ:"
                android:id="@+id/textView8"
                android:gravity="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_book_share_qq"
                android:layout_weight="0.95"
                android:background="@android:drawable/picture_frame" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
